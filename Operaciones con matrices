#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <time.h>
//printf("\n");
int main() {
	int X=0,W,V,Z,i,j;
	srand (time(NULL));
	int Y[V][V];

	
	while (X != 6){
		printf("-----MENU-----\n");
		printf("--------------\n\n");
		printf("1.- Suma \n");
		printf("2.- Resta \n");
		printf("3.- Multiplicacion \n");
		printf("4.- Diagonal \n");
		printf("5.- Suma Triangular Superior \n");
		printf("6.- Salida \n\n");
	
		printf("Ingrese la opcion deseada:");
		scanf ("%d",&X);
		system ("cls");
		
		if (X<=6){
			switch (X){
				case 1: printf("Ejercicio_1----->Suma\n");
					printf("Ingrese el tamano de la matriz\n");
					scanf ("%d",&V);
					
					for (i= 0; i<V; i++){
						for (j=0; j<V; j++){
							Y[i][j]=rand()%(9)+1;
							printf("%d ",Y[i][j]);
							Z+=Y[i][j];
							
						}//Fin del segundo for
						printf("\n");
					}//Fin del primer for
					
					printf("La suma de las matrices es: %d\n",Z);
					printf("\nPresione cualquier tecla para continuar.\n");
					getch ();
					system ("cls");
					break;
					
				case 2: printf("Ejercicio_2----->Resta\n");
					printf("Ingrese el tamano de la matriz\n");
					scanf ("%d",&V);
					
					for (i= 0; i<V; i++){
						for (j=0; j<V; j++){
							Y[i][j]=rand()%(9)+1;
							printf("%d ",Y[i][j]);
							Z=Z-Y[i][j];
							
						}//Fin del segundo for
						printf("\n");
					}//Fin del primer for
					
					printf("La suma de las matrices es: %d\n",Z);
					printf("\nPresione cualquier tecla para continuar.\n");
					getch ();
					system ("cls");
					break;
					
				case 3: printf("Ejercicio_3----->Multiplicacion\n");
					printf("Ingrese el tamano de la matriz\n");
					scanf ("%d",&V);
					
					for (i= 0; i<V; i++){
						for (j=0; j<V; j++){
							Y[i][j]=rand()%(9)+1;
							printf("%d ",Y[i][j]);
							Z=Z*Y[i][j];
							
						}//Fin del segundo for
						printf("\n");
					}//Fin del primer for
					
					printf("La suma de las matrices es: %d\n",Z);
					printf("\nPresione cualquier tecla para continuar.\n");
					getch ();
					system ("cls");
					break;
					
				case 4: printf("Ejercicio_4----->Diagonal\n");
					printf("Ingrese el tamano de la matriz\n");
					scanf ("%d",&V);
				
					printf("\nEsta es tu diagonal:\n");
					for (i= 0; i<V; i++){
						for (j=0; j<V; j++){
							Y[i][j]=rand()%(9)+1;
							printf("%d ",Y[i][j]);
						}//Fin de for j
						printf("\n");
					}//Fin de for i
					printf("\nPresione cualquier tecla para continuar.\n");
					getch ();
					system ("cls");
					break;
					
				case 5: printf("Ejercicio_5----->Suma Triangular Superior\n");
				
					getch ();
					system ("cls");
					break;
			}//Fin de switch
		}else{
		}
		if (X >= 7 || X<=0){
			printf("ErroR del Usuario, la opcion ingresada no existe \n");
			printf("Presione cualquier tecla para continuar\n");
			getch ();
			system ("cls");
		}//Fin de if
	}//Fin de while
	
	printf("Fin de las operaciones con matrices.\nGracias por usar este programa.\n");
	printf("\n\n--------FIN DEL PROGRAMA--------");
	return 0;
}//Fin de main
